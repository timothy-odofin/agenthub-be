# AgentHub - Staging Environment Configuration
# This file is for STAGING/PRE-PRODUCTION testing

# ============================================================================
# ENVIRONMENT
# ============================================================================
APP_ENV=staging
DEBUG=false

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_HOST=staging-db.example.com
POSTGRES_PORT=5432
POSTGRES_USER=agenthub_staging
POSTGRES_PASSWORD=${STAGING_DB_PASSWORD}  # Mount from secrets
POSTGRES_DB=agenthub_staging

MONGODB_HOST=staging-mongo.example.com
MONGODB_PORT=27017
MONGODB_USER=agenthub_staging
MONGODB_PASSWORD=${STAGING_MONGO_PASSWORD}  # Mount from secrets
MONGODB_DB=agenthub_staging

REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}  # Mount from secrets

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
JWT_SECRET_KEY=${STAGING_JWT_SECRET}  # Mount from secrets
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
OPENAI_API_KEY=${STAGING_OPENAI_API_KEY}
ANTHROPIC_API_KEY=${STAGING_ANTHROPIC_API_KEY}
GROQ_API_KEY=${STAGING_GROQ_API_KEY}

# LangChain Staging Tracing
LANGCHAIN_API_KEY=${STAGING_LANGCHAIN_API_KEY}
LANGCHAIN_PROJECT=agenthub-staging
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
ALLOWED_ORIGINS=https://staging.agenthub.example.com
ALLOW_CREDENTIALS=true

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
JIRA_URL=${STAGING_JIRA_URL}
JIRA_USERNAME=${STAGING_JIRA_USERNAME}
JIRA_API_TOKEN=${STAGING_JIRA_API_TOKEN}

CONFLUENCE_URL=${STAGING_CONFLUENCE_URL}
CONFLUENCE_USERNAME=${STAGING_CONFLUENCE_USERNAME}
CONFLUENCE_API_TOKEN=${STAGING_CONFLUENCE_API_TOKEN}

DATADOG_API_KEY=${STAGING_DATADOG_API_KEY}
DATADOG_APP_KEY=${STAGING_DATADOG_APP_KEY}
DATADOG_SITE=datadoghq.com
