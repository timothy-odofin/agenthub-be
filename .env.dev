# AgentHub - Development Environment Configuration
# This file is for LOCAL DEVELOPMENT only

# ============================================================================
# ENVIRONMENT
# ============================================================================
APP_ENV=development
DEBUG=true

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_DB=agenthub_dev

MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=admin123
MONGODB_DB=agenthub_dev

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
OPENAI_API_KEY=your-dev-openai-api-key
ANTHROPIC_API_KEY=your-dev-anthropic-api-key
GROQ_API_KEY=your-dev-groq-api-key

# LangChain Development Tracing
