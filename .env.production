# AgentHub - Production Environment Configuration
# ⚠️ NEVER commit this file with real secrets
# All sensitive values should be mounted from secure secret management

# ============================================================================
# ENVIRONMENT
# ============================================================================
APP_ENV=production
DEBUG=false

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_HOST=${PROD_POSTGRES_HOST}
POSTGRES_PORT=5432
POSTGRES_USER=${PROD_POSTGRES_USER}
POSTGRES_PASSWORD=${PROD_POSTGRES_PASSWORD}
POSTGRES_DB=agenthub_prod

MONGODB_HOST=${PROD_MONGODB_HOST}
MONGODB_PORT=27017
MONGODB_USER=${PROD_MONGODB_USER}
MONGODB_PASSWORD=${PROD_MONGODB_PASSWORD}
MONGODB_DB=agenthub_prod

REDIS_HOST=${PROD_REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
JWT_SECRET_KEY=${PROD_JWT_SECRET}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
OPENAI_API_KEY=${PROD_OPENAI_API_KEY}
ANTHROPIC_API_KEY=${PROD_ANTHROPIC_API_KEY}
GROQ_API_KEY=${PROD_GROQ_API_KEY}

# LangChain Production Tracing
LANGCHAIN_API_KEY=${PROD_LANGCHAIN_API_KEY}
LANGCHAIN_PROJECT=agenthub-production
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
ALLOWED_ORIGINS=https://agenthub.example.com,https://www.agenthub.example.com
ALLOW_CREDENTIALS=true

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=WARNING
LOG_FORMAT=json

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
JIRA_URL=${PROD_JIRA_URL}
JIRA_USERNAME=${PROD_JIRA_USERNAME}
JIRA_API_TOKEN=${PROD_JIRA_API_TOKEN}

CONFLUENCE_URL=${PROD_CONFLUENCE_URL}
CONFLUENCE_USERNAME=${PROD_CONFLUENCE_USERNAME}
CONFLUENCE_API_TOKEN=${PROD_CONFLUENCE_API_TOKEN}

DATADOG_API_KEY=${PROD_DATADOG_API_KEY}
DATADOG_APP_KEY=${PROD_DATADOG_APP_KEY}
DATADOG_SITE=datadoghq.com

# ============================================================================
# SECURITY & PERFORMANCE
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30
