# ================================
# Database Configuration
# ================================

# PostgreSQL Database
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=agenthub
# Use 'postgres' when running app in docker, 'localhost' when running locally
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# PGVector Configuration
PGVECTOR_COLLECTION_NAME=embeddings
# Use 'postgres' as host when running in docker, 'localhost' when running locally
PGVECTOR_CONNECTION_STRING=postgresql://your_user:your_password@localhost:5432/agenthub

# ================================
# MongoDB Configuration
# ================================

MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password
MONGODB_DATABASE=agenthub

# Optional: Override the connection string if needed
MONGODB_CONNECTION_STRING=mongodb://your_mongodb_user:your_mongodb_password@localhost:27017/agenthub

# Session Storage Configuration
SESSION_STORAGE_TYPE=mongodb
SESSION_COLLECTION_NAME=chat_sessions
MESSAGE_COLLECTION_NAME=chat_messages

# ================================
# Redis Configuration
# ================================

# Use 'redis' when running app in docker, 'localhost' when running locally
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_SSL=false
REDIS_PASSWORD=
REDIS_DB=0
REDIS_REST_TOKEN=
REDIS_REST_URL=

# ================================
# LLM API Keys
# ================================

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key

# Groq API Key (optional)
GROQ_API_KEY=your-groq-api-key

# Hugging Face (optional)
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_USERNAME=your-huggingface-username

# ================================
# Vector Database
# ================================

# Qdrant Configuration
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_ENDPOINT=https://your-cluster.qdrant.io
QDRANT_CLUSTER_ID=your-cluster-id

# ================================
# LangChain Monitoring (optional)
# ================================

LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_PROJECT=agenthub
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ================================
# Application Configuration
# ================================

APP_ENV=development
DEBUG=true
APP_NAME=AgentHub
APP_VERSION=1.0.0
ENV=development

# ================================
# Security
# ================================

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# Atlassian Integration (optional)
# ================================

ATLASSIAN_API_KEY=your-atlassian-api-key
ATLASSIAN_BASE_URL_CONFLUENCE=https://your-domain.atlassian.net/wiki
ATLASSIAN_BASE_URL_JIRA=https://your-domain.atlassian.net
ATLASSIAN_EMAIL=your-email@example.com

# ================================
# GitHub Integration (optional)
# ================================

GITHUB_APP_ID=your-github-app-id
GITHUB_APP_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_INSTALLATION_ID=your-installation-id

# GitHub Private Key (for GitHub App authentication)
# You can provide either the path to the key file or the key content itself
GITHUB_PRIVATE_KEY_PATH=path/to/your/private-key.pem
# OR provide the key directly (base64 encoded or as multi-line string)
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
your-private-key-content-here
-----END RSA PRIVATE KEY-----"

# ================================
# Monitoring & Analytics (optional)
# ================================

# Datadog Configuration
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
